{
  "openapi": "3.0.0",
  "info": {
    "title": "Challenge Docs Docs",
    "description": "This is a documentation API created with SOLID",
    "version": "1.0.0",
    "contact": {
      "email": "nicolasteofilodecastro@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "sumary": "Create a user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Nicolas Te√≥filo",
                  "email": "nicolasteofilodecastro@gmail.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "User already exists"
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "sumary": "List all users",
        "description": "List all users",
        "responses": {
          "200": {
            "description": "List"
          },
          "400": {
            "description": "Error in list"
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "sumary": "View a user",
        "description": "view a  user",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "User not exists"
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["Users"],
        "summary": "Turn an user as admin",
        "description": "To update the user, you need the route param 'user_id'",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          },
          "404": {
            "description": "User not exists"
          }
        }
      }
    }
  }
}
